@{
    ViewData["Title"] = "Overview";
}

<div class="row sb">
    <h2>Your books</h2>

    <a asp-action="Create" class="btn">Add book</a>
</div>

<div class="book-items small row sb">
    @foreach (var book in Model.Books)
    {
        <a asp-controller="Book" asp-action="Edit" asp-route-id="@book.Id" class="book-item small">
            <img src="https://via.placeholder.com/150" alt="Book Image">
            <span class="price">@book.Price</span>
            <span class="title">@book.Name</span>
        </a>
    }
</div>