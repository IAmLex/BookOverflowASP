@model BookModel
@{
    ViewData["Title"] = "Edit";
}
<div class="container">
    <h2>@ViewData["Title"]</h2>
</div>

<section>
    <div class="container">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" placeholder="Name"/>

                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QualityRating" class="control-label"></label>
                <input asp-for="QualityRating" class="form-control" placeholder="Quality rating"/>

                <span asp-validation-for="QualityRating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" placeholder="Price"/>

                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="row sb">
                    <input type="submit" class="btn" />
                    <a href='javascript:history.go(-1)' class="btn">Back</a>
                </div>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
