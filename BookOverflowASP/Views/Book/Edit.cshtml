@model BookModel
@{
    ViewData["Title"] = "Edit";
    List<SectorModel> sectors = (List<SectorModel>)ViewData["Sectors"];
    List<CourseModel> courses = (List<CourseModel>)ViewData["Courses"];
}
<div class="container">
    <h2>@ViewData["Title"]</h2>
</div>

<section>
    <div class="container">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" placeholder="Name"/>

                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QualityRating" class="control-label"></label>
                <input asp-for="QualityRating" class="form-control" placeholder="Quality rating"/>

                <span asp-validation-for="QualityRating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" placeholder="Price"/>

                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select asp-for="@Model.Sector.Id">
                    @foreach (SectorModel sector in sectors) 
                    {
                        if (sector.Id == Model.Sector.Id) 
                        {
                            <option value="@sector.Id" selected>@sector.Name</option>
                        } 
                        else 
                        {
                            <option value="@sector.Id">@sector.Name</option>
                        }
                    }
                </select>
            </div>
             <div class="form-group">
                <select asp-for="@Model.Course.Id">
                    @foreach (CourseModel course in courses) 
                    {
                        if (course.Id == Model.Course.Id)
                        {
                            <option value="@course.Id" selected>@course.Name</option>
                        }
                        else 
                        {
                            <option value="@course.Id">@course.Name</option>
                        }
                    }
                </select>
            </div> 
            <div class="form-group">
                <div class="row sb">
                    <input type="submit" class="btn" />
                    <a href='javascript:history.go(-1)' class="btn">Back</a>
                </div>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
